@model FacultyWebApp.ViewModels.StudentPicture


@{
    ViewData["Title"] = "Details";
}
<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            <img src="~/Pictures/@Model.Student.profilePicture"
                 class="rounded-circle"
                 height="40" width="40"
                 asp-append-version="true" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.EnrollmentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.EnrollmentDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.AcquiredCredits)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.AcquiredCredits)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.CurrentSemester)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.CurrentSemester)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.EducationLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.EducationLevel)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditPicture" asp-route-id="@Model?.Student.StudentId">Edit picture |</a>
    <a asp-action="Edit" asp-route-id="@Model.Student.StudentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
